<!-- Loop over each object in the posts array -->
{{#each posts as |post|}}
<div class="column is-three-quarters-mobile mx-4">
  <div class="column">
    <div class="box">
      <a href="/post/{{post.id}}">
      <h3 class="is-size-1 has-text-black-bis is-capitalized">{{post.title}}</h3>
      </a>
      <div class="content">
        <h5 class=" has-text-black-bis">Course: {{post.course_name}}</h5>

        <h5 class=" has-text-black-bis">Due: {{format_date post.due_date}}</h5>

        <h5 class=" has-text-black-bis">Priority: {{capitalize post.priority}}</h5>

        <h5 class=" has-text-black-bis">Status: {{capitalize post.status}}</h5>

        <h6 class=" has-text-black-bis">Posted by {{post.user.username}} on {{format_date post.date_created}}</h6>

        <p class=" has-text-black-bis">{{post.content}}</p>
        
      </div>
    </div>
  </div>
</div>
{{/each}}
